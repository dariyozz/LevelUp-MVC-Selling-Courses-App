@model LevelUp.Models.Lesson

@{
    ViewBag.Title = "Edit Lesson";
}

<section id="edit-lesson" class="py-5">
    <div class="container">
        <h2 class="text-center mb-5" style="color: #333; font-size: 2.5rem; font-weight: 700;">Edit Lesson</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CourseId)
                @Html.HiddenFor(model => model.Id)

                <div class="form-group row justify-content-center">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(model => model.Content, new { @class = "form-control", rows = 5 })
                        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <div class="col-md-8 text-center">
                        <input type="submit" value="Save" class="btn btn-primary" style="background-color: #007bff; border-color: #007bff;" />
                        <a href="@Url.Action("Lessons", "Courses", new { id = Model.CourseId })" class="btn btn-secondary ml-2" style="background-color: #6c757d; border-color: #6c757d;">Cancel</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
