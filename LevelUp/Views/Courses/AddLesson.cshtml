@model LevelUp.Models.Lesson

@{
    ViewBag.Title = "Add Lesson";
}

<section id="add-lesson" class="py-5" style="background-color: #f7f9fc; min-height: 100vh; display: flex; align-items: center; justify-content: center;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm p-4" style="border-radius: 10px;">
                    <h2 class="text-center mb-4" style="color: #007bff; font-size: 2rem; font-weight: 700;">Add Lesson</h2>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <input type="hidden" value="@ViewBag.CourseId" name="courseId"/>
                            @Html.HiddenFor(model => model.CourseId)
                            <div class="form-group mb-3">
                                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "form-label", style = "font-weight: bold;" })
                                <div>
                                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", style = "border-radius: 5px;" } })
                                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "form-label", style = "font-weight: bold;" })
                                <div>
                                    @Html.TextAreaFor(model => model.Content, new { @class = "form-control", rows = 5, style = "border-radius: 5px;" })
                                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group text-center">
                                <input type="submit" value="Add Lesson" class="btn btn-primary" style="background-color: #007bff; border-color: #007bff; font-weight: bold; padding: 10px 20px; border-radius: 5px;" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
