@model IEnumerable<LevelUp.Models.Lesson>

@{
    ViewBag.Title = "Lessons";
}

<section id="lessons" class="py-5" style="background-color: #f7f9fc;">
    <div class="container">
        <h2 class="text-center mb-5" style="color: #333; font-size: 2.5rem; font-weight: 700;">Lessons</h2>
        @foreach (var lesson in Model)
        {
            <div class="mb-5 p-4" style="background-color: #fff; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <h3 style="color: #007bff; font-weight: 700;">@lesson.Title</h3>
                <p style="color: #555;">@lesson.Content</p>
                @if (User.IsInRole("Admin"))
                {
                    <div class="text-right">
                        <a href="@Url.Action("EditLesson", new { id = lesson.Id })" class="btn btn-secondary ml-2" style="background-color: #6c757d; border-color: #6c757d;">Edit</a>
                        <a href="@Url.Action("DeleteLesson", new { id = lesson.Id })" class="btn btn-danger ml-2" style="background-color: #dc3545; border-color: #dc3545;">Delete</a>
                    </div>
                }
            </div>
        }
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}